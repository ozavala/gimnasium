<div class="col-lg-4">
  <div class="panel">
    <div class="panel-heading">
      <%= link_to "#{@today} Clases", classes_path %>
    </div>
    <div class="panel-body">
      <% unless @klasses.empty? %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th class="col-lg-9">Nombre</th>
              <th>Hora</th>
            </tr>
          </thead>
          <tbody>
            <% @klasses.each do |klass| %>
              <tr>
                <td>
                  <%= link_to klass.name, edit_class_path(klass) %>
                </td>
                <td>
                  <%= l(klass.class_time, format: :time) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <%= link_to 'Nueva Clase', new_class_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
