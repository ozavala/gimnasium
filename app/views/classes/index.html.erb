<div class="row">
  <div class="col-lg-12">
    <div class="panel">
      <div class="panel-heading">
        Classes
      </div>
      <div class="panel-body">
        <% unless @klasses.empty? %>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>DÃ­a de la Semana</th>
                <th>Hora</th>
                <th class="hidden-xs">Recurrente</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @klasses.each do |klass| %>
                <tr>
                  <td>
                    <%= klass.name %>
                  </td>
                  <td>
                    <%= klass.day_of_week %>
                  </td>
                  <td>
                    <%= l klass.class_time, format: :time %>
                  </td>
                  <td class="hidden-xs">
                    <%= icon klass.recurring?, 'check' %>
                  </td>
                  <td>
                    <%= link_to edit_class_path(klass), class: 'btn btn-sm btn-default' do %>
                      <i class="fa fa-edit"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="pull-right">
            <%= link_to export_classes_path do %>
              <i class="fa fa-cloud-download"></i>
              Download
            <% end %>
          </div>
          <div class="text-center">
            <%= paginate @klasses %>
          </div>
        <% end %>
        <%= link_to 'Nueva Clase', new_class_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
