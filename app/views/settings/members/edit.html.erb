<div class="row">
  <div class="col-lg-12">
    <div class="panel">
      <div class="panel-heading">
        Configurar Miembros
      </div>
      <div class="panel-body">
        <%= form_for @member_settings, url: settings_member_path, html: { class: 'form-horizontal' } do |f| %>
          <%= render 'layouts/shared/errors', object: @member_settings %>
          <div class="form-group">
            <%= f.label :default_payment_due_day_enabled, 'Día de Vencimiento por Defecto Activado', class: 'col-lg-2 col-sm-2 control-label' %>
            <div class="col-lg-2">
              <%= f.check_box :default_payment_due_day_enabled, class: 'check_box' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :default_payment_due_day, 'Día de Pago por Defecto', class: 'col-lg-2 col-sm-2 control-label' %>
            <div class="col-lg-1">
              <%= select_day @member_settings.default_payment_due_day || 1, {}, { id: 'settings_member_default_payment_due_day', name: 'settings_member[default_payment_due_day]'} %>
            </div>
          </div>
          <br/>
          <%= f.submit 'Actualizar Configuraciones', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
