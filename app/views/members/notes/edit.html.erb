<div class="row">
  <div class="col-lg-12">
    <div class="panel">
      <div class="panel-heading">
        Edit Note
      </div>
      <div class="panel-body">
        <%= form_for @note, url: member_note_path(@member, @note), method: 'put', html: { class: 'form-horizontal' } do |f| %>
          <%= render 'layouts/shared/errors', object: @note %>
          <div class="form-group">
            <div class="col-lg-10">
              <%= f.text_area :body, class: 'form-control' %>
            </div>
          </div>
          <br/>
          <%= f.submit nil, class: 'btn btn-primary' %>
          <%= link_to 'Remover Nota', member_note_path(@member, @note), confirm: '¿Está seguro?', method: 'delete', class: 'btn btn-danger' %>
          <%= link_to 'Cancelar', @member, class: 'btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
